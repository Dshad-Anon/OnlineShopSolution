@page "/ProductDetails/{Id:int}"
@using System.Globalization
@inherits ProductDetailsBase

@if(Product ==null && ErrorMessage == null)
{
    <DisplaySpinner/>
}
else if(ErrorMessage != null){
    <DisplayErrorMessage ErrorMessage="@ErrorMessage"></DisplayErrorMessage>
}else
{   
    <h3 class"mb-5">Product details</h3>
    <div class="row">
        <div class="col-md-6 mb-4">
            <img class="img-fluid" src="@Product.ImageUrl">
        </div>
        <div class="col-md-6">
            <h3>@Product.Name</h3>
            <p class="mb-4">@Product.Description</p>
            <p class="mb-4">
                <b>
                    @Product.Price.ToString("C",CultureInfo.CreateSpecificCulture("fi-FI"))&nbsp;(@Product.Quantity items in stock)
                </b>
            </p>
        </div>
    </div>

}