@page "/"
@inherits ProductsBase

@if(Products  == null)
{
    <h3>Loading products......</h3>
}
else
{
    <h3 class="mb-5">Products</h3>
    var productCount = Products.Count();
    @if(productCount > 0)
    {
        @foreach (var productGroup in GetGroupedProductByCategory())
        {
            <h3>@GetCategoryName(productGroup)</h3>
            <div class="row mt-3">
                
                <DisplayProduct Products="@productGroup.Take(4)"></DisplayProduct>
            </div>
            <hr class="mb-3"/>
        }
    }
}
